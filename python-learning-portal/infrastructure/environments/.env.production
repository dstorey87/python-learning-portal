# Production Environment Variables
NODE_ENV=production

# Service Ports
FRONTEND_PORT=3000
BACKEND_PORT=3001
EXECUTOR_PORT=3003
NGINX_PORT=80
NGINX_SSL_PORT=443

# Service URLs (AWS Lightsail)
FRONTEND_URL=https://python-portal-real.nf0keysv54fy8.eu-west-1.cs.amazonlightsail.com
BACKEND_URL=https://python-portal-real.nf0keysv54fy8.eu-west-1.cs.amazonlightsail.com/api
EXECUTOR_URL=http://executor:3000
VITE_BACKEND_URL=https://python-portal-real.nf0keysv54fy8.eu-west-1.cs.amazonlightsail.com/api

# CORS Configuration
CORS_ORIGINS=https://python-portal-real.nf0keysv54fy8.eu-west-1.cs.amazonlightsail.com

# Logging
LOG_LEVEL=info

# Docker Configuration
COMPOSE_PROJECT_NAME=python-portal-prod
COMPOSE_FILE=infrastructure/docker/docker-compose.prod.yml

# Security
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Resource Limits
EXECUTOR_CPU_LIMIT=0.5
EXECUTOR_MEMORY_LIMIT=512M
BACKEND_CPU_LIMIT=0.5
BACKEND_MEMORY_LIMIT=512M
FRONTEND_CPU_LIMIT=0.25
FRONTEND_MEMORY_LIMIT=256M

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s