# Environment Variables Template
# Copy this file to .env.development or .env.production and fill in the values

# Environment
NODE_ENV=development|production

# Service Ports
FRONTEND_PORT=5173
BACKEND_PORT=3001
EXECUTOR_PORT=3003
NGINX_PORT=80

# Service URLs
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001
EXECUTOR_URL=http://localhost:3003
VITE_BACKEND_URL=http://localhost:3001/api

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging Level
LOG_LEVEL=debug|info|warn|error

# Docker Configuration
COMPOSE_PROJECT_NAME=python-portal-dev
COMPOSE_FILE=infrastructure/docker/docker-compose.dev.yml

# Development Features (development only)
HOT_RELOAD=true
CHOKIDAR_USEPOLLING=true

# Security (production only)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Resource Limits (production only)
EXECUTOR_CPU_LIMIT=0.5
EXECUTOR_MEMORY_LIMIT=512M
BACKEND_CPU_LIMIT=0.5
BACKEND_MEMORY_LIMIT=512M
FRONTEND_CPU_LIMIT=0.25
FRONTEND_MEMORY_LIMIT=256M